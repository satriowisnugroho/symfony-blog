{% extends "layouts/admin/main.html.twig" %}

{% block title %}Articles{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Articles</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-index">
                    Article Show
                    <a href="{{ path('article_index') }}" class="btn btn-default pull-right">Back</a>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>ID</label>
                                <p>{{ article.id }}</p>
                            </div>
                            <div class="form-group">
                                <label>Name</label>
                                <p>{{ article.name }}</p>
                            </div>
                            <div class="form-group">
                                <label>Slug</label>
                                <p>{{ article.slug }}</p>
                            </div>
                            <div class="form-group">
                                <label>Created At</label>
                                <p>{% if article.createdAt %}{{ article.createdAt|date('Y-m-d H:i:s') }}{% endif %}</p>
                            </div>
                            <div class="form-group">
                                <label>Updated At</label>
                                <p>{% if article.updatedAt %}{{ article.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</p>
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <p>{{ article.content }}</p>
                            </div>
                            <div class="form-group">
                                {{ form_start(delete_form) }}
                                <a href="{{ path('article_edit', { 'id': article.id }) }}" class="btn btn-success">Edit</a>
                                <input type="submit" value="Delete" class="btn btn-danger">
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
